<div id="<%= dom_id(collection) %>" class="flex items-center justify-between p-4 mb-2 bg-white border border-gray-200 rounded-lg shadow-sm">
  <%= link_to collection.name, collection_path(collection), class: "font-medium text-gray-900 hover:text-blue-600", data: { turbo_frame: "_top" } %>
  <div class="space-x-2">
    <%= link_to "Edytuj", edit_collection_path(collection), data: { turbo_frame: "modal" }, class: "text-blue-600 hover:text-blue-800" %>
    <%= button_to "Usuń", collection_path(collection), method: :delete, data: { turbo_confirm: "Czy na pewno chcesz usunąć tę kolekcję?", turbo_frame: "_top" }, class: "text-red-600 hover:text-red-800" %>
  </div>
</div> 