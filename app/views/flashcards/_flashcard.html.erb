<%# Receives local variable `flashcard` %>
<%= tag.div id: dom_id(flashcard), class: "flashcard-item border border-gray-200 rounded-lg p-4 shadow-sm" do %>
  <div class="mb-2">
    <p class="text-sm text-gray-500 font-medium">Przód:</p>
    <p><%= flashcard.front_content %></p>
  </div>
  <div class="mb-2">
    <p class="text-sm text-gray-500 font-medium">Tył:</p>
    <p><%= flashcard.back_content %></p>
  </div>
  <div>
    <p class="text-sm text-gray-500 font-medium">Typ:</p>
    <p class="text-sm"><%= flashcard.flashcard_type %></p>
  </div>
<% end %> 