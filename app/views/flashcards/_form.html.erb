<%= form_with(url: generate_collection_flashcards_path(collection), method: :post, data: { controller: "character-counter" }) do |form| %>
  <div class="mb-4">
    <%= form.label :input_text, "Wprowadź tekst do wygenerowania fiszek (max. 1000 znaków):", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_area :input_text,
                       rows: 10,
                       class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border border-gray-300 rounded-md",
                       data: { character_counter_target: "input", action: "input->character-counter#updateCount" } %>
    <div class="text-right text-sm text-gray-500 mt-1">
      <span data-character-counter-target="count">0</span>/1000
    </div>
  </div>

  <div class="flex justify-end">
    <%= form.button "Generuj Propozycje",
                    class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 disabled:opacity-50 disabled:cursor-not-allowed",
                    data: { character_counter_target: "submit" } %>
  </div>
<% end %> 